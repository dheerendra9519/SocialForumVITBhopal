<%- include("./partials/header"); -%>
<main id="register-page" class="mt-80 font-mono">
  <form class="card mx-auto max-w-lg">
    <div class="p-3">
      <h1 class="text-center">Register</h1>
      <div class="mt-3">
        <label for="user-email" class="mb-2">Email</label>
        <input type="email" id="user-email" placeholder="Enter email id... " class="border-violet-500 border-2 rounded w-full p-2" autocomplete="none">
      </div>
      <div class="mt-4 mb-6">
        <label for="user-password" class="mb-2"> Password</label>
        <input type="password" id="user-password" placeholder="Enter password..." class="border-violet-500 border-2 rounded w-full p-2">
      </div>
      <div class="mt-4 mb-6">
        <label for="confirm-password" class="mb-2"> Confirm Password</label>
        <input type="password" id="confirm-password" placeholder="Enter password again..." class="border-violet-500 border-2 rounded w-full p-2">
      </div>
      <button type="submit" class="primary-button mb-3 w-full">Sign-Up</button>
    </div>
  </form>
  <div id="register-output" class="hidden font-extrabold text-center mx-auto mt-4 p-3">
    <%= reason %>
  </div>
</main>
<script src="/register.js"></script>
</body>
</html>